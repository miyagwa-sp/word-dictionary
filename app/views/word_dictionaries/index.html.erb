<%= form_with(url: '/', method: 'GET') do |f| %>
    <div class="row p-2">
        <div class="col-sm-2">
            <%= f.label :word, '調べる単語'%>
        </div>
        <div class="col-sm-10">
            <%= f.text_field :word, class: 'form-control'%>
        </div>
    </div>
    <div class="row p-2">
        <div class="col-sm-12">
            <% if @meaning %>
                <div class="card p-2">
                    <div class="card-body">
                        <h5 class="card-title">意味</h5>
                        <p class="card-text"><%= @meaning %></p>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <div class="row p-2">
        <div class="col-sm-6 p-1">
            <%= f.submit '調べる' , class: 'btn btn-primary btn-block w-100', name: nil %>
        </div>
        <div class="col-sm-6 p-1">
            <%= link_to 'クリア', '/', class: 'btn btn-warning btn-block w-100' %>
        </div>
    </div>
<% end %>
